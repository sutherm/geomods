#!/bin/sh
# -*- scheme -*-
prefix="/usr"
exec_prefix="/usr"
exec ${GUILE:-/usr/bin/guile} $GUILE_FLAGS -e '(@@ (datalist) main)' -s "$0" "$@"
!#

