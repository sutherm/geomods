(define-module (datalist)
  #:use-module (ice-9 getopt-long)
  #:use-module (ice-9 command-line)
  #:autoload (ice-9 format) (format))

;; The User Config File, this can be set in the .guile config file.
(define datalist-config 
  (cond 
   ((file-exists? (string-append (getenv "HOME") "/.datalist.conf"))
    (string-append (getenv "HOME") "/.datalist.conf"))
   ((file-exists? (string-append (getenv "HOME") "/.datalist.scm"))
    (string-append (getenv "HOME") "/.datalist.scm"))
   (else
    (string-append (getenv "HOME") "/.datalist"))))


;; Hack to provide scripts with the bug-report address.
(module-define! the-scm-module
                '%guile-bug-report-address
                "bug-guile@gnu.org")


(define datalist-version "0.1.0")
(define *option-grammar*
  '((help (single-char #\h))
    (version (single-char #\v))))

(define (display-version)
  (version-etc "DATALIST    "
               datalist-version
	       #:copyright-holder "Matthew Love"
	       #:copyright-year 2018
               #:command-name "datalist"
               #:license *LGPLv3+*))

(define (find-script s)
  (resolve-module (list 'geographic 'scripts 'datalist (string->symbol s)) #:ensure #f))

(define (main args)
  (if (defined? 'setlocale)
      (catch 'system-error
        (lambda ()
          (setlocale LC_ALL ""))
        (lambda args
          (format (current-error-port)
                  "warning: failed to install locale: ~a~%"
                  (strerror (system-error-errno args))))))

  (set-current-module (resolve-module '(datalist datalist)))
  (if (file-exists? datalist-config)
      (load datalist-config))

  (let* ((options (getopt-long args *option-grammar*
                               #:stop-at-first-non-option #t))
         (args (option-ref options '() '())))
    (cond
     ((option-ref options 'help #f)
      (apply (module-ref (resolve-module '(geographic scripts datalist help)) 'main) args)
      (exit 0))
     ((option-ref options 'version #f)
      (display-version)
      (exit 0))
     ((find-script (if (null? args) "help" (car args)))
      => (lambda (mod)
           (exit (apply (module-ref mod 'main) (if (null? args)
                                                   '()
                                                   (cdr args))))))
     (else
      (format (current-error-port)
              "datalist: unknown script ~s~%" (car args))
      (format (current-error-port)
              "Try `datalist help' for more information.~%")
      (exit 1)))))
