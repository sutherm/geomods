;;; Commentary:
;; Usage: gdal-query [ args ]
;;
;; Query a gdal file.
;;
;; try gms gdal-query --help for more detailed usage information.
;;
;;; Code:

(define-module (gms scripts gdal-query)
  #:use-module (ice-9 getopt-long)
  #:export (gdal-query))

;; cxhull version number
(define gdal-query-version "0.0.1")

(define %summary "Query a gdal file.")
(define %include-in-gms-list #f)

(define command-synopsis
  '((version (single-char #\V) (value #f))))

;; Display help information
(define (display-help)
  (format #t "\
~a

usage: gdal-query [ -hvV [args] ] [ file ]
" %summary))

;; Display Version information
(define (display-version)
  (format #t "\
gdal-query (GeoMODs) version ~a

License LGPLv3+: GNU LGPL 3 or later <http://gnu.org/licenses/lgpl.html>.
This is free software: you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law.
" gdal-query-version))

;; gm-li mainline
(define (gdal-query . args)
  (system (string-append "gdal_query.py " (string-join args " "))))

(define main gdal-query)
;;; End
